<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.masterpiecesoft.tenkw"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <!-- phone info. - group -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    
    <!-- gps speed check -->
    <uses-permission android:name="android.permission.INTERNET" /> 
	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.masterpiecesoft.tenkw.layout.GroupActivity"
            android:label="@string/title_activity_group" >
        </activity>
        <activity
            android:name="com.masterpiecesoft.tenkw.layout.LoadingActivity"
            android:label="@string/title_activity_loading" >
        </activity>
        <activity
            android:name="com.masterpiecesoft.tenkw.layout.CreateGroupActivity"
            android:label="@string/title_activity_create_group" >
        </activity>
        <activity
            android:name="com.masterpiecesoft.tenkw.layout.JoinActivity"
            android:label="@string/title_activity_join" 
            android:theme="@android:style/Theme.Black.NoTitleBar">
        </activity>
        <activity android:name="com.masterpiecesoft.tenkw.layout.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>
