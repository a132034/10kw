
<!-- 전체 - Main_Layout -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Main_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    
    <!-- frame layout -  -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Frame_Layout">

    <!-- linear layout  -->
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aaaaaa"
        android:orientation="vertical"
        android:visibility="visible" >

	    <!-- view paper - group image button -->
		<android.support.v4.view.ViewPager
            android:id="@+id/Group_ImgBt"
            android:layout_width="wrap_content"
            android:layout_height="184dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.35"
            android:background="@drawable/btn_main_stroke"
            android:gravity="center" >
        </android.support.v4.view.ViewPager>

		<!-- linear layout - group info.  -->
        <LinearLayout
            android:id="@+id/Group_info"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.50"
            android:background="@drawable/bt_main_box"
            android:orientation="vertical" >

			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/Group_Name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SGEN CLUB"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/Group_PeopleNo_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="N명"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/Group_Percent_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16%"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/Group_Km_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.2/20km"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <ProgressBar
                    android:id="@+id/Group_Progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- linear layout - start button -->
		<LinearLayout
            android:id="@+id/Running_Start_Layout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="5dp"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/Running_Start_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_start" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

     <ListView
        android:id="@+id/main_personal_listView"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="#111" >

    </ListView>
    
</android.support.v4.widget.DrawerLayout>
